<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/styles/customeStyle.css" rel="stylesheet" />
        <link href="~/styles/bootstrap.css" rel="stylesheet" />

        <script src="~/scripts/bootstrap.js"></script>
        <script src="~/scripts/popper.js"></script>
        <script src="~/scripts/jquery.js"></script>
        <script src="~/js/bootstrap.bundle.js"></script>
        <script src="~/jquery-validate/jquery.validate.js"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <title>@ViewBag.Title</title>
        <link rel="icon" href="/Images/logo.png" type="image/png">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid" >
                <img class="navbar-brand" src="~/images/logo.png" width="50" height="60">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Home Page</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Catalog" class="navbar-brand">Catalog</a>
                        </li>
                        @{
                            if (User.Identity!.IsAuthenticated!)
                            {
                                <div class="btn-group justify-content-between form-inline">
                                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Welcome @User.Identity.Name!
                                    </button>
                                    <div class="dropdown-menu" >
                                        @{
                                            if (User.IsInRole("Administrator"))
                                            {
                                                <li class="nav-item">
                                                    <a asp-controller="home" asp-action="AdminPage"  class="dropdown-item">Admin Page</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a asp-controller="account" asp-action="UserChangeAuth" class="dropdown-item">Authorization Page</a>
                                                </li>
                                            }
                                        }
                                        <li class="nav-item ">
                                            <a asp-controller="account" asp-action="logout" class="dropdown-item">Signout</a>
                                        </li>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <ul class="navbar-nav">
                                    <li class="nav-item ">
                                        <a asp-controller="Home" asp-action="LoginSignup" class="navbar-brand">Login/Signup</a>
                                    </li>
                                </ul>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
    </body>
</html>
