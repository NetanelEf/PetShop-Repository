@model WebApplication1.Models.LoginRegisterModel;

@{
    ViewBag.Title = "Login Signup";
    Layout = "_Layout";
}

<link href="~/styles/loginSheet.css" rel="stylesheet" />

<style>
    body{
        background-image: url('@Url.Content("~/Images/loginregisterbg.jpg")');
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

@{
    var str = TempData["Errors"]?.ToString();
    if (!string.IsNullOrEmpty(str))
    {
        str = str!.Replace("\r\n", "\\r\\n");
        <script>alert('@str');</script>
    }
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card" style="height:500px;">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item text-center">
                <a class="nav-link active btl" id="pills-home-tab" data-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-home" aria-selected="true">Login</a>
            </li>
            <li class="nav-item text-center">
                <a class="nav-link btr" id="pills-profile-tab" data-toggle="pill" href="#pills-register" role="tab" aria-controls="pills-profile" aria-selected="false">Signup</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="pills-home-tab">
                <form asp-controller="account" asp-action="login" method="post">
                    <h1 class="fw-light text-center">Login</h1>
                    <div class="form px-4 pt-5">
                        <input type="text" name="Username" class="form-control" placeholder="Username" />
                        <input type="password" name="Password" class="form-control" placeholder="Password" />
                        <input type="submit" class="btn btn-dark btn-block" value="Login" />
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="pills-profile-tab">
                <form asp-controller="account" asp-action="register" method="post">
                    <h4 class="fw-light text-center">Register</h4>
                    <div class="form px-4">
                        <input type="text" name="UserName" class="form-control" placeholder="UserName" />
                        <input type="text" name="Nickname" class="form-control" placeholder="Nickname" />
                        <input type="text" name="Email" class="form-control" placeholder="Email" />
                        <input type="text" name="PhoneNumber" class="form-control" placeholder="Phone" />
                        <input type="password" name="Password" class="form-control" placeholder="Password" />
                        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <input type="submit" class="btn btn-dark btn-block" value="Signup" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>